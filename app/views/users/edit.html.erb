<% provide(:title, "Edit user") %>
<h1>Update your profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>


      <mark><%= f.label :name %></mark>
      <%= f.text_field :name, class: 'form-control' %>

      <mark><%= f.label :email %></mark>
      <%= f.email_field :email, class: 'form-control' %>

      <mark><%= f.label :password %></mark>
      <%= f.password_field :password, class: 'form-control' %>

      <mark><%= f.label :password_confirmation, "Confirmation" %></mark>
      <%= f.password_field :password_confirmation, </mark>class: 'form-control' %>

      <%= f.submit "Save changes", class: "btn btn-primary" %>

    <% end %>
<a href="" class= "btn btn-danger btn-sm active" role="button">Delete</a>
    </div>
  </div>

