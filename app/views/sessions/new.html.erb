<% provide(:title, "Log in") %>
<h1>Log in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <mark><%=  f.label :email %></mark>
      <%= f.email_field :email, class: 'form-control' %>

      <mark><%= f.label :password %></mark>
      <%= f.password_field :password, class: 'form-control' %>

      <mark><%= f.label :remember_me, class: "checkbox inline" do %></mark>
        <%= f.check_box :remember_me %>
        <span style="color:white;">Remember me on this computer</span>
      <% end %>

      <%= f.submit "Log in", class: "btn btn-primary" %>
    <% end %>

    <p style="color:white;">New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>
